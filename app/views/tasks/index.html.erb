<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <%= link_to task_path(task.id) do%>
    <div class="form-check">
         <% if task.completed %>
      <% else %>
        <i class="form-check"></i>
        <%end%>
      </div>
    <li><%= task.title %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to 'create a new task', new_task_path %>
